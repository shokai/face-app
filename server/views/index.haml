- content_for :title do
  = @title

%div
  %ul
    - @blobs.each do |b|
      %li
        %ul
          %li
            - url = "#{app_root}/#{b.file_path}"
            - if b.mime_type =~ /^image/
              %img{:src => url}
            - else
              URL :
              %a{:href => url}= url
          %li
            type : #{b.mime_type}
          %li
            uploaded_at : #{b.uploaded_at}
          %li
            md5 : #{b.md5}
